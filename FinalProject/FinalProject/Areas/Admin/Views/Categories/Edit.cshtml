@model FinalProject.Models.Category

@{
    ViewData["Title"] = "Uredi";
    ViewData["Description"] = "Uredi kategoriju kroz obrazac";
}

<h1>@ViewData["Title"]</h1>

<h4>@ViewData["Description"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label">Naziv kategorije</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Opis kategorije</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Slika</label>
                <input type ="hidden" asp-for="Image" class="form-control" />
                <img src="~/images/categories/@Model.Image" width="384" height="384" />
            </div>
            <div class="form-group">
                <label class="control-label">Dodaj novu sliku</label>
                <input type="file" name="newImage" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi promjene" class="btn btn-primary" />
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@Model?.Id">Obriši</a>
                <a asp-action="Index" class="btn btn-outline-primary">Popis predavača</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
