@model FinalProject.Models.Category

@{
    ViewData["Title"] = "Obriši kategoriju";
    ViewData["Directions"] = "Jeste li sigurni da želite obrisati ovu kategoriju?";
}

<h1>@ViewData["Title"]</h1>

<h3>@ViewData["Directions"]</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Naziv kategorije:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Opis kategorije:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Slika:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-primary">Popis kategorija</a>
    </form>
</div>
