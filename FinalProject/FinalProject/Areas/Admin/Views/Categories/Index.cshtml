@model IEnumerable<FinalProject.Models.Category>

@{
    ViewData["Title"] = "Popis svih kategorija";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Dodaj novu kategoriju</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Naziv kategorije
            </th>
            <th>
                Opis kategorije
            </th>
            <th>
                Slika
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id">Uredi</a>
                    <a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id">Detalji</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Obriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
