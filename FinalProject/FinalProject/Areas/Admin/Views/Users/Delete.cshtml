@model FinalProject.Areas.Identity.Data.ApplicationUser

@{
    ViewData["Title"] = "Obriši korisnika";
    ViewData["Directions"] = "Jeste li sigurni da želite obrisati ovoga korisnika?";
}

<h1>@ViewData["Title"]</h1>

<h3>@ViewData["Directions"]</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ime
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Prezime
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Adresa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            Mail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-outline-primary">Popis korisnika</a>
    </form>
</div>