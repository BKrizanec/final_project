@model FinalProject.Areas.Identity.Data.ApplicationUser

@using Microsoft.AspNetCore.Identity;
@using FinalProject.Areas.Identity.Data;

@inject UserManager<ApplicationUser> _userManager

@{
    ViewData["Title"] = "Dodaj novog korisnika";
    ViewData["Description"] = "Ispunite obrazac kako bi dodali novog korisnika";
}

<h1>@ViewData["Title"]</h1>

<h4>@ViewData["Description"]</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <h2>Create a new user</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Ime</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Prezime</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="PasswordHash" class="control-label">Zaporka</label>
                <input asp-for="PasswordHash" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Adresa</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <partial name="~/Areas/Admin/Views/Shared/_UserRolesDropdownPartial.cshtml" />
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj korisnika" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>